<audio id="bgMusic" loop src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3"></audio>
<audio id="clickSound" src="https://www.fesliyanstudios.com/play-mp3/387"></audio>

<script>
// ================= Yashiki Order =================
const yashiki = document.getElementById("yashiki");
const yashikiBox = document.getElementById("yashikiBox");
const orderList = document.getElementById("orderList");
yashiki.addEventListener("click", () => {
  yashikiBox.style.display = yashikiBox.style.display==="block" ? "none" : "block";
});

const cards = document.querySelectorAll(".card");
cards.forEach(card => {
  card.addEventListener("click", () => {
    const name = card.getAttribute("data-name");
    const price = card.getAttribute("data-price");
    const li = document.createElement("li");
    li.textContent = `${name} - ${price}`;
    orderList.appendChild(li);
    document.getElementById("clickSound").play();
  });
});

// ================= Music =================
const musicBtn = document.getElementById("soundBtn");
const bgMusic = document.getElementById("bgMusic");
musicBtn.addEventListener("click", () => {
  if(bgMusic.paused){ bgMusic.play(); musicBtn.textContent="üîá Pause Music"; }
  else{ bgMusic.pause(); musicBtn.textContent="üéµ Enable Music"; }
});

// ================= Sakura Petals =================
function createPetals(){
  const petal = document.createElement("div");
  petal.className="petal";
  petal.style.left=Math.random()*100+"vw";
  petal.style.animationDuration=(5+Math.random()*5)+"s";
  petal.style.fontSize=(10+Math.random()*10)+"px";
  document.body.appendChild(petal);
  setTimeout(()=>{petal.remove();},10000);
}
setInterval(createPetals,300);
</script>
